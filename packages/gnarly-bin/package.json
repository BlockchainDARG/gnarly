{
  "name": "@xlnt/gnarly-bin",
  "version": "0.2.0",
  "description": "A simple executable for running gnarly reducers.",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build-ts && npm run tslint",
    "ts-start": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint --project .",
    "pkg": "pkg --targets node9-linux-x64,node9-macos-x64 --out-path ./pkg ."
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "gnarly"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:XLNT/gnarly.git"
  },
  "author": "Matt Condon <matt@XLNT.co>",
  "license": "Apache-2.0",
  "devDependencies": {
    "dotenv": "^5.0.1",
    "pkg": "^4.3.1",
    "ts-node": "^6.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@xlnt/gnarly-core": "^0.2.0",
    "@xlnt/gnarly-reducer-block-meta": "^0.2.0",
    "@xlnt/gnarly-reducer-erc721": "^0.2.0",
    "sequelize": "^4.37.7"
  }
}
