{
  "name": "@xlnt/gnarly-core",
  "version": "0.6.0",
  "description": "Condense blockchains into steady state with confidence.",
  "main": "lib/index.js",
  "types": "./src/types/gnarly.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build-ts && npm run tslint",
    "start": "node lib/index.js",
    "test": "nyc --reporter=html --reporter=text mocha -r ts-node/register -r source-map-support/register --full-trace test/**/*.spec.ts",
    "watch-test": " mocha --watch --watch-extensions ts -r ts-node/register test/**/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint --project ."
  },
  "files": [
    "lib"
  ],
  "repository": "https://github.com/XLNT/gnarly/tree/master/packages/gnarly-core",
  "keywords": [
    "ethereum"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/XLNT/gnarly/issues"
  },
  "homepage": "https://github.com/XLNT/gnarly#readme",
  "dependencies": {
    "@xlnt/fast-json-patch": "^2.0.8",
    "bn.js": "^4.11.8",
    "debug": "^3.1.0",
    "ethereumjs-blockstream": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash.identity": "^3.0.0",
    "lodash.isplainobject": "^4.0.6",
    "moize": "^5.3.1",
    "number-to-bn": "^1.7.0",
    "p-map": "^1.2.0",
    "p-queue": "^2.4.2",
    "p-retry": "^2.0.0",
    "pg": "^7.4.1",
    "sequelize": "^4.35.2",
    "uuid": "^3.2.1",
    "web3": "^1.0.0-beta.29",
    "web3-eth-abi": "^1.0.0-beta.34",
    "web3-utils": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-spies": "^1.0.0",
    "@types/lodash.identity": "^3.0.3",
    "@types/lodash.isplainobject": "^4.0.3",
    "@types/node": "^10.5.7",
    "@xlnt/typescript-typings": "^0.6.0",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.2",
    "mocha": "^5.0.4",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.9.1",
    "typescript": "2.6.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "lib",
      "test",
      "coverage",
      "polyfills"
    ],
    "reporter": [
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  }
}
